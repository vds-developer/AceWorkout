<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/darkBackgroundColor">

    <LinearLayout
        android:id="@+id/top_nav"
        android:layout_width="411dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/menu_topNav_imgBtn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@color/darkBackgroundColor"
                android:contentDescription="@string/menu_button"
                android:tint="@color/darkTextColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/ic_menu_sort_by_size" />

            <TextView
                android:id="@+id/title_topNav_imgBtn"
                android:layout_width="241dp"
                android:layout_height="29dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/ace_workout"
                android:textColor="@color/darkTextColor"
                app:layout_constraintStart_toEndOf="@+id/menu_topNav_imgBtn"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <android.support.design.button.MaterialButton
                android:id="@+id/day1_topNav_btn"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:clickable="false"
                android:text="@string/_1"
                android:textColor="@color/darkTextColor"
                app:backgroundTint="@color/darkBackgroundColor"
                app:iconPadding="0dp"
                app:strokeColor="@color/darkTextColor"
                app:strokeWidth="3dp" />

            <android.support.design.button.MaterialButton
                android:id="@+id/day2_topNav_btn"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/_2"
                android:textColor="@color/darkTextColor"
                app:backgroundTint="@color/darkBackgroundColor"
                app:iconPadding="0dp"
                app:strokeColor="@color/darkTextColor"
                app:strokeWidth="3dp" />

            <android.support.design.button.MaterialButton
                android:id="@+id/day3_topNav_btn"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/_3"
                android:textColor="@color/darkTextColor"
                app:backgroundTint="@color/darkBackgroundColor"
                app:iconPadding="0dp"
                app:strokeColor="@color/darkTextColor"
                app:strokeWidth="3dp" />

            <android.support.design.button.MaterialButton
                android:id="@+id/day4_topNav_btn"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/_4"
                android:textColor="@color/darkTextColor"
                app:backgroundTint="@color/darkBackgroundColor"
                app:iconPadding="0dp"
                app:strokeColor="@color/darkTextColor"
                app:strokeWidth="3dp" />

            <android.support.design.button.MaterialButton
                android:id="@+id/day5_topNav_btn"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/_5"
                android:textColor="@color/darkTextColor"
                app:backgroundTint="@color/darkBackgroundColor"
                app:iconPadding="0dp"
                app:strokeColor="@color/darkTextColor"
                app:strokeWidth="3dp" />

            <android.support.design.button.MaterialButton
                android:id="@+id/day6_topNav_btn"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/_6"
                android:textColor="@color/darkTextColor"
                app:backgroundTint="@color/darkBackgroundColor"
                app:iconPadding="0dp"
                app:strokeColor="@color/darkTextColor"
                app:strokeWidth="3dp" />

            <android.support.design.button.MaterialButton
                android:id="@+id/day7_topNav_btn"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="@string/_7"
                android:textColor="@color/darkTextColor"
                app:backgroundTint="@color/darkBackgroundColor"
                app:iconPadding="0dp"
                app:strokeColor="@color/darkTextColor"
                app:strokeWidth="3dp" />
        </LinearLayout>

    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/main_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_tab_slider"
        app:layout_constraintTop_toBottomOf="@id/top_nav">
    </android.support.v4.view.ViewPager>

    <android.support.design.widget.TabLayout
        android:id="@+id/bottom_tab_slider"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tabIconTint="@color/darkTextColor"
        app:tabIndicatorColor="@color/darkHighlightColor"
        app:tabTextColor="@color/green">

        <android.support.design.widget.TabItem
            android:id="@+id/report_botNav_tab"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:icon="?attr/actionModeCloseDrawable"
            android:text="@string/report"
            android:tint="@color/darkTextColor" />

        <android.support.design.widget.TabItem
            android:id="@+id/summary_botNav_tab"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:icon="?attr/actionModeCloseDrawable"
            android:text="@string/recap"
            android:tint="@color/darkTextColor" />

        <android.support.design.widget.TabItem
            android:id="@+id/training_botNav_tab"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:icon="?attr/actionModeCloseDrawable"
            android:text="@string/training"
            android:tint="@color/darkTextColor" />

        <android.support.design.widget.TabItem
            android:id="@+id/setting_botNav_tab"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:icon="?attr/actionModeCloseDrawable"
            android:text="@string/setting" />
    </android.support.design.widget.TabLayout>

